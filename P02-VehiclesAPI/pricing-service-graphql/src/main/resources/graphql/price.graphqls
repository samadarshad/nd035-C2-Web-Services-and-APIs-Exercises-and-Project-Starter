type Price {
    id: ID!
    price: Int!
    currency: String!
    vehicle_id: Int!
}

type Query {
    findAllPrices: [Price]!
    findPricesByVehicleId(vehicle_id: Int!): [Price]!
}

type Mutation {
    newPrice(price: Int!, currency: String!, vehicle_id: Int!) : Price!
    updatePrice(id: Int!, price: Int, currency: Int, vehicle_id: Int): Price!
    deletePrice(id: Int!): Boolean!
    deleteAllByVehicleId(vehicle_id: Int!): Boolean!
}